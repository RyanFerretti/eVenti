= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :description
    = f.text_field :description

  .field
    = f.label :start
    = f.datetime_select :start

  .field
    = f.label :end
    = f.datetime_select :end

  .actions
    = f.submit
